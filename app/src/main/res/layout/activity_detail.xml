<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailActivity"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_close_primary"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Name agabfiaijkd"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            app:columnCount="3"
            app:alignmentMode="alignBounds"
            app:columnOrderPreserved="false">

            <TextView
                android:id="@+id/label_desc"
                android:text="Description"
                app:layout_column="0"
                app:layout_row="0"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/label_date"
                android:text="Date"
                app:layout_column="0"
                app:layout_row="1"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/label_location"
                android:text="Location"
                app:layout_column="0"
                app:layout_row="2"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/label_dot"
                android:text=":"
                app:layout_column="1"
                app:layout_row="0"
                android:textSize="16dp"
                android:paddingHorizontal="16dp"/>

            <TextView
                android:id="@+id/label_dot2"
                android:text=":"
                app:layout_column="1"
                app:layout_row="1"
                android:textSize="16dp"
                android:paddingHorizontal="16dp"/>

            <TextView
                android:id="@+id/label_dot3"
                android:text=":"
                app:layout_column="1"
                app:layout_row="2"
                android:textSize="16dp"
                android:paddingHorizontal="16dp"/>

            <TextView
                android:id="@+id/val_desc"
                android:text="hdafakhfuaiufglfkjahlbfuawl dlkjah"
                app:layout_column="2"
                app:layout_row="0"
                android:textSize="16dp"
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                />

            <TextView
                android:id="@+id/val_date"
                android:layout_width="0dp"
                app:layout_column="2"
                app:layout_row="1"
                app:layout_columnWeight="1"
                android:text="qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/val_location"
                android:text="uadai fiaiiihkahihf"
                app:layout_column="2"
                app:layout_row="2"
                android:textSize="16dp"
                android:layout_width="0dp"
                app:layout_columnWeight="1"
                />
        </androidx.gridlayout.widget.GridLayout>


    </LinearLayout>
</ScrollView>